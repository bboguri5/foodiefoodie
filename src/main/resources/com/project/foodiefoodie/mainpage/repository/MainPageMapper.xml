        <!--        mariaDB version -->
        <![CDATA[
        SELECT
        CASE
        WHEN (SELECT TO_CHAR(current_timestamp,'DY') FROM dual) = closedday THEN '오늘 휴무'
        WHEN breakstarttime <= (SELECT TO_CHAR
        (current_timestamp, 'HH24:MI') "NOW" FROM DUAL) AND breakendtime >= (SELECT TO_CHAR
        (current_timestamp, 'HH24:MI') "NOW" FROM DUAL) THEN '브레이크 타임'
        WHEN weekdayclosetime >= (SELECT TO_CHAR
        (current_timestamp, 'HH24:MI') "NOW" FROM DUAL) AND weekdayopentime <= (SELECT TO_CHAR
        (current_timestamp, 'HH24:MI') "NOW" FROM DUAL) THEN '영업중'
        ELSE '영업끝'
        END AS StoreTimeText
        FROM promotion_store_time
        WHERE promotion_bno = #{promotionBno}
        ]]>
