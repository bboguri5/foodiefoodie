<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- mapper태그는 sql을 매핑할때 사용하는 태그
     namespace속성에는 사용할 인터페이스의 풀 패키지경로 + 인터페이스이름
  -->
<mapper namespace="com.project.foodiefoodie.premiume.repository.PremiumeMapper">


    <resultMap id="premiumeMap" type="com.project.foodiefoodie.premiume.domain.Premiume">
        <result property="promotionBno" column="promotion_bno"/>
        <result property="startDate" column="start_date"/>
        <result property="endDate" column="end_date"/>
    </resultMap>

    <resultMap id="premiumeDTO" type="com.project.foodiefoodie.premiume.dto.PremiumeDTO">
        <result property="promotionBno" column="promotion_bno"/>
        <result property="startDate" column="start_date"/>
        <result property="endDate" column="end_date"/>
    </resultMap>

    <select id="findAll" resultMap="premiumeMap">
        SELECT * FROM premiume_promotion_board
        WHERE complete = #{complete}
    </select>

    <insert id="save">
        INSERT INTO premiume_promotion_board VALUES(#{promotionBno}, #{startDate}, #{endDate})
    </insert>

    <delete id="remove">
        DELETE FROM premiume_promotion_board
        WHERE promotion_bno = #{promotionBno}
    </delete>

    <update id="modify">
        UPDATE premiume_promotion_board SET start_date = #{startDate} , end_date = #{endDate}, complete = #{complete}
        WHERE promotion_bno = #{promotionBno}
    </update>

    <select id="findAllAndTitle" resultMap="premiumeDTO">
        SELECT
        a.promotion_bno, a.start_date, a.end_date
        , a.complete, b.title
        FROM premiume_promotion_board a
        JOIN promotion_board b
        ON a.promotion_bno = b.promotion_bno
        WHERE a.complete = #{complete}

    </select>

</mapper>